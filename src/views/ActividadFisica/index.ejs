<div class="container py-5">
    <h1 class="text-center mb-4">Registros de Actividad Física</h1>
    
    <!-- Formulario de búsqueda -->
    <form action="/actividad-fisica/search" method="GET" class="mb-3">
        <div class="row">
            <div class="col-md-4">
                <label for="tipo_actividad" class="form-label">Tipo de Actividad</label>
                <input type="text" class="form-control" id="tipo_actividad" name="tipo_actividad">
            </div>
            <div class="col-md-4">
                <label for="duracion_minutos" class="form-label">Duración (min)</label>
                <input type="number" class="form-control" id="duracion_minutos" name="duracion_minutos">
            </div>
            <div class="col-md-4">
                <label for="calorias_quemadas" class="form-label">Calorías Quemadas</label>
                <input type="number" class="form-control" id="calorias_quemadas" name="calorias_quemadas">
            </div>
        </div>
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>
    
    <table class="table table-striped table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Tipo de Actividad</th>
                <th>Duración (min)</th>
                <th>Calorías Quemadas</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% registros.forEach((registro) => { %>
                <tr>
                    <td><%= registro.actividadFisica_id %></td>
                    <td><%= new Date(registro.fecha).toLocaleDateString() %></td>
                    <td><%= registro.tipo_actividad %></td>
                    <td><%= registro.duracion_minutos %></td>
                    <td><%= registro.calorias_quemadas %></td>
                    <td>
                        <a href="/actividad-fisica/edit/<%= registro._id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/actividad-fisica/<%= registro._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="text-end">
        <a href="/actividad-fisica/create" class="btn btn-success">Agregar Registro</a>
    </div>
</div>
