<div class="container py-5">
    <h1 class="text-center mb-4">Registros de Alimentación</h1>
    
    <!-- Formulario de búsqueda -->
    <form action="/alimentacion/search" method="GET" class="mb-3">
        <div class="row">
            <div class="col-md-4">
                <label for="calorias_totales" class="form-label">Calorías Totales</label>
                <input type="number" class="form-control" id="calorias_totales" name="calorias_totales">
            </div>
            <div class="col-md-4">
                <label for="agua_consumida_ml" class="form-label">Agua Consumida (ml)</label>
                <input type="number" class="form-control" id="agua_consumida_ml" name="agua_consumida_ml">
            </div>
        </div>
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>
    
    <table class="table table-striped table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Comidas</th>
                <th>Calorías Totales</th>
                <th>Agua Consumida (ml)</th>
                <th>Sugerencias Nutricionales</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% registros.forEach((registro) => { %>
                <tr>
                    <td><%= registro.alimentacion_id %></td>
                    <td><%= registro.comidas %></td>
                    <td><%= registro.calorias_totales %></td>
                    <td><%= registro.agua_consumida_ml %></td>
                    <td><%= registro.sugerencias_nutricionales %></td>
                    <td>
                        <a href="/alimentacion/edit/<%= registro._id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/alimentacion/<%= registro._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="text-end">
        <a href="/alimentacion/create" class="btn btn-success">Agregar Registro</a>
    </div>
</div>
