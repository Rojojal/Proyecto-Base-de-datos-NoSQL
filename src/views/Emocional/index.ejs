<div class="container py-5">
    <h1 class="text-center mb-4">Registros Emocionales</h1>
    
    <!-- Formulario de búsqueda -->
    <form action="/emocional/search" method="GET" class="mb-3">
        <div class="row">
            <div class="col-md-4">
                <label for="estado_emocional" class="form-label">Estado Emocional</label>
                <input type="text" class="form-control" id="estado_emocional" name="estado_emocional">
            </div>
            <div class="col-md-4">
                <label for="nivel_estres" class="form-label">Nivel de Estrés</label>
                <input type="number" class="form-control" id="nivel_estres" name="nivel_estres">
            </div>
            <div class="col-md-4">
                <label for="causas" class="form-label">Causas</label>
                <input type="text" class="form-control" id="causas" name="causas">
            </div>
        </div>
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>
    
    <table class="table table-striped table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Fecha</th>
                <th>Estado Emocional</th>
                <th>Nivel de Estrés</th>
                <th>Causas</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% registros.forEach((registro) => { %>
                <tr>
                    <td><%= registro.emocional_id %></td>
                    <td><%= new Date(registro.fecha).toLocaleDateString() %></td>
                    <td><%= registro.estado_emocional %></td>
                    <td><%= registro.nivel_estres %></td>
                    <td><%= registro.causas %></td>
                    <td>
                        <a href="/emocional/edit/<%= registro._id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/emocional/<%= registro._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="text-end">
        <a href="/emocional/create" class="btn btn-success">Agregar Registro</a>
    </div>
</div>
