<div class="container py-5">
    <h1 class="text-center mb-4">Historias de Éxito</h1>
    
    <!-- Formulario de búsqueda -->
    <form action="/historias-exito/search" method="GET" class="mb-3">
        <div class="row">
            <div class="col-md-6">
                <label for="titulo" class="form-label">Título</label>
                <input type="text" class="form-control" id="titulo" name="titulo">
            </div>
            <div class="col-md-6">
                <label for="estado_publicacion" class="form-label">Estado de Publicación</label>
                <select class="form-select" id="estado_publicacion" name="estado_publicacion">
                    <option value="">Todos</option>
                    <option value="Publicado">Publicado</option>
                    <option value="No Publicado">No Publicado</option>
                </select>
            </div>
        </div>
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <table class="table table-striped table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Título</th>
                <th>Fecha</th>
                <th>Estado</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% historias.forEach((historia) => { %>
                <tr>
                    <td><%= historia.historias_exito_id %></td>
                    <td><%= historia.titulo_historia %></td>
                    <td><%= new Date(historia.fecha_publicacion).toLocaleDateString() %></td>
                    <td><%= historia.estado_publicacion %></td>
                    <td>
                        <a href="/historias-exito/edit/<%= historia._id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/historias-exito/<%= historia._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="text-end">
        <a href="/historias-exito/create" class="btn btn-success">Agregar Historia</a>
    </div>
</div>
