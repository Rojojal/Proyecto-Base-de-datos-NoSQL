<div class="container py-5">
    <h1 class="text-center mb-4">Editar Logro</h1>
    <div class="card shadow">
        <div class="card-body">
            <form action="/logros/edit/<%= logro._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="tipo_logro" class="form-label">Tipo de Logro</label>
                    <input type="text" class="form-control" id="tipo_logro" name="tipo_logro" value="<%= logro.tipo_logro %>" required>
                </div>
                <div class="mb-3">
                    <label for="descripcion" class="form-label">Descripci√≥n</label>
                    <textarea class="form-control" id="descripcion" name="descripcion" rows="4" required><%= logro.descripcion %></textarea>
                </div>
                <div class="mb-3">
                    <label for="fecha_logro" class="form-label">Fecha</label>
                    <input type="date" class="form-control" id="fecha_logro" name="fecha_logro" value="<%= new Date(logro.fecha_logro).toISOString().split('T')[0] %>" required>
                </div>
                <div class="text-end">
                    <a href="/logros" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
