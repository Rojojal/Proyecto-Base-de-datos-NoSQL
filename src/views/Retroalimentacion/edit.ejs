<div class="container py-5">
    <h1 class="text-center mb-4">Editar Retroalimentación</h1>
    <div class="card shadow">
        <div class="card-body">
            <form action="/retroalimentacion/edit/<%= retroalimentacion._id %>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label for="fecha" class="form-label">Fecha</label>
                    <input type="date" class="form-control" id="fecha" name="fecha" 
                        value="<%= new Date(retroalimentacion.fecha).toISOString().split('T')[0] %>" required>
                </div>
                <div class="mb-3">
                    <label for="tipo_feedback" class="form-label">Tipo de Feedback</label>
                    <input type="text" class="form-control" id="tipo_feedback" name="tipo_feedback" 
                        value="<%= retroalimentacion.tipo_feedback %>" required>
                </div>
                <div class="mb-3">
                    <label for="comentario" class="form-label">Comentario</label>
                    <textarea class="form-control" id="comentario" name="comentario" rows="4" required>
                        <%= retroalimentacion.comentario %>
                    </textarea>
                </div>
                <div class="mb-3">
                    <label for="valoracion" class="form-label">Valoración</label>
                    <input type="number" class="form-control" id="valoracion" name="valoracion" min="1" max="5" 
                        value="<%= retroalimentacion.valoracion %>" required>
                </div>
                <div class="text-end">
                    <a href="/retroalimentacion" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" class="btn btn-warning">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
</div>
