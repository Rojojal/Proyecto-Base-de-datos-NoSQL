<div class="container py-5">
    <h1 class="text-center mb-4">Registros de Sueño</h1>

    <!-- Formulario de búsqueda -->
    <form action="/sueno/search" method="GET" class="mb-4">
        <div class="row">
            <div class="col-md-6">
                <label for="calidad_sueno" class="form-label">Calidad de Sueño</label>
                <select class="form-select" id="calidad_sueno" name="calidad_sueno">
                    <option value="">Seleccione</option>
                    <option value="Excelente">Excelente</option>
                    <option value="Buena">Buena</option>
                    <option value="Regular">Regular</option>
                    <option value="Mala">Mala</option>
                </select>
            </div>
            <div class="col-md-6">
                <label for="duracion_sueno" class="form-label">Duración (mínima en horas)</label>
                <input type="number" class="form-control" id="duracion_sueno" name="duracion_sueno" step="0.1">
            </div>
        </div>
        <div class="text-end mt-3">
            <button type="submit" class="btn btn-primary">Buscar</button>
        </div>
    </form>

    <table class="table table-striped table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>ID</th>
                <th>Usuario</th>
                <th>Fecha</th>
                <th>Duración</th>
                <th>Calidad</th>
                <th>Sugerencias</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            <% suenos.forEach((sueno) => { %>
                <tr>
                    <td><%= sueno.sueno_id %></td>
                    <td><%= sueno.user_id %></td>
                    <td><%= new Date(sueno.fecha).toLocaleDateString() %></td>
                    <td><%= sueno.duracion_sueno %> horas</td>
                    <td><%= sueno.calidad_sueno %></td>
                    <td><%= sueno.sugerencias_descanso %></td>
                    <td>
                        <a href="/sueno/edit/<%= sueno._id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/sueno/<%= sueno._id %>?_method=DELETE" method="POST" class="d-inline">
                            <button class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
    <div class="text-end">
        <a href="/sueno/create" class="btn btn-success">Agregar Registro</a>
    </div>
</div>
